<section>
  <div class="row">
    <div class="col-md-12">
      <center>
        <table class="connect-four-table">
          <thead>
            <tr>
              <% (1..7).to_a.each do |number| %>
                <td class="turn-position"></td>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% (1..49).to_a.in_groups_of(7).each do |groups| %>
              <tr>
                <% groups.each do |row| %>
                  <td class="piece-holder"><div class="blank"></div></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </center>
    </div>
  </div>
</section>